@{
    ViewData["Title"] = "Logowanie";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Permissions-Policy" content="geolocation 'self'; microphone 'self'; camera 'self'">
    <meta http-equiv="Permissions-Policy-Report-Only" content="geolocation 'self'; microphone 'self'; camera 'self'">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Link do stylów Bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <title>Rejestracja</title>

    <style>
        .container {
            max-width: 400px; /* Maksymalna szerokość kontenera formularza */
            margin-top: 50px; /* Odstęp od góry */
        }

        .material-symbols-outlined {
            font-size: 150px; /* Rozmiar ikony */
            margin-bottom: 20px; /* Odstęp od elementów powyżej */
            display: block; /* Ustawienie ikony jako bloku */
            margin-left: auto; /* Wyśrodkowanie ikony poziomo */
            margin-right: auto; /* Wyśrodkowanie ikony poziomo */
        }

        .form-text {
            font-size: 14px; /* Rozmiar tekstu pomocy */
        }
    </style>
</head>
<body>

    </nav>

    <div class="container">
        <h1 class="display-4 text-center">Welcome</h1>
        <p class="lead text-center">Loguj się</p>

        <span class="material-symbols-outlined text-center">
            <i class="fas fa-user"></i>
        </span>

        <form method="post" action="/login">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Adres email</label>
                <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Wpisz email">
                <div id="emailHelp" class="form-text">Nie udostępniamy nikomu Twojego adresu email.</div>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Hasło</label>
                <input type="password" class="form-control" id="inputPassword" placeholder="Hasło">
            </div>

            <button type="button" class="btn btn-primary d-block mx-auto" id="but_zaloguj">Zaloguj się</button>
        </form>
    </div>

    <!-- Skrypty Bootstrapa -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="/lib/bootstrap/dist/js/Zaloguj.js"></script>
</body>
</html>
