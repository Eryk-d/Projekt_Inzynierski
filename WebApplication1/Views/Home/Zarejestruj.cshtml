@{
    ViewData["Title"] = "Zarejstruj Konto";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Permissions-Policy" content="geolocation 'self'; microphone 'self'; camera 'self'">
    <meta http-equiv="Permissions-Policy-Report-Only" content="geolocation 'self'; microphone 'self'; camera 'self'">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Zarejstruj Konto</title>
    <style>
        .container2 {
            max-width: 400px; /* Zwiększenie maksymalnej szerokości */
            margin: 50px auto; /* Wyśrodkowanie kontenera z zachowaniem marginesu u góry */
        }

        .material-symbols-outlined {
            font-size: 150px;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .form-text {
            font-size: 14px;
        }

        .password-toggle {
            position: relative;
        }

        .password-icon {
            cursor: pointer;
            position: absolute;
            right: 10px;
            top: calc(50%); /* Center vertically, adjust here if needed */
            color: #000;
            z-index: 2;
            transform: translateY(50%); /* Use transform to fine-tune vertical positioning */
        }

        .password-input {
            padding-right: 30px; /* Make room for the icon inside the input */
        }
    </style>
</head>
<body>
    <div class="container2">
        <h1 class="display-4 text-center">Welcome</h1>
        <p class="lead text-center">Zarejestruj się</p>

        <span class="material-symbols-outlined text-center">
            <i class="fas fa-user-plus"></i>
        </span>

        <form method="post" action="/register">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Adres email</label>
                <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Wpisz email">
                <div id="emailHelp" class="form-text">Nie udostępniamy nikomu Twojego adresu email.</div>
            </div>
            <div class="mb-3 password-toggle">
                <label for="inputPassword" class="form-label">Hasło</label>
                <input type="password" class="form-control password-input" id="inputPassword" placeholder="Hasło">
                <i class="fas fa-eye password-icon" onclick="togglePasswordVisibility()"></i>
            </div>

            <button type="button" class="btn btn-success d-block mx-auto" id="but_zarejestruj">Zarejestruj się</button>
        </form>
    </div>

    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("inputPassword");
            var passwordIcon = document.querySelector(".password-icon");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordIcon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                passwordInput.type = "password";
                passwordIcon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>
    <script type="module" src="/lib/bootstrap/dist/js/Rejestracja.js"></script>
</body>
</html>
