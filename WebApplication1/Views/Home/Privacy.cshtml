@{
    ViewData["Title"] = "Moje hasła";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        .material-symbols-outlined {
            font-size: 150px;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }
    </style>
</head>

<h1 class="text-center my-4">@ViewData["Title"]</h1>
<span class="material-symbols-outlined">
    encrypted
</span>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <hr>
            <h2>Oto lista haseł.</h2>
            <!-- Lista rozwijana z hasłami -->
            <select id="passwordList" class="form-select mb-3">
                <option selected>Wybierz hasło...</option>
            </select>

            <!-- Formularz do wprowadzenia klucza i deszyfrowania wybranego hasła -->
            <form id="decryptForm" class="mb-3">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Podaj Klucz" id="decryptKey" required>
                </div>
                <button type="submit" class="btn btn-primary">Deszyfruj wybrane hasło</button>
            </form>
            <!-- Miejsce na zdeszyfrowane hasło -->
            <!-- Kontener na zdeszyfrowane hasło -->
            <div id="decryptedPasswordDisplay" class="mt-3"></div>


            <hr>
            <h2>Oto lista wszystkich twoich haseł.</h2><br>
            <form id="form2" class="mb-3">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Podaj Klucz" id="keys" required>
                </div>
                <button type="submit" class="btn btn-primary">Deszyfruj wszystkie hasła</button>
            </form>
            <button id="toggleButton" class="btn btn-secondary mb-3">Pokaż/Ukryj hasła</button>
            <hr>
        </div>
    </div>
</div>


<div id="update_password" class="container" style="width: 50%">

</div>

<div id="card" class="container mt-5" style="width: 30%; font-family: Arial, sans-serif; font-weight: 600; font-size: 16px;"> </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


<script type="module" src="/lib/bootstrap/dist/js/CRUD_R.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('toggleButton').addEventListener('click', function () {
            var cardDiv = document.getElementById('card');
            cardDiv.classList.toggle('d-none');
        });
    });
</script>

